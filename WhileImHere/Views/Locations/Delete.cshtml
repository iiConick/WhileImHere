@model WhileImHere.Models.Location

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete City/Town</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Name
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationName)
        </dd>
        <dt class = "col-sm-2">
            Notification Radius (km)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationRadius)
        </dd>
        <dt class = "col-sm-2">
            Priority
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LocationPriority)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="LocationID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-primary"asp-action="Index">Back to List</a>
    </form>
</div>
