@model WhileImHere.Models.Location

@{
    ViewData["Title"] = "Create";
}

<h1>New City/Town</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LocationName" class="control-label">Name</label>
                <input asp-for="LocationName" class="form-control" />
                <span asp-validation-for="LocationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationRadius" class="control-label">Notification Radius (km)</label>
                <input asp-for="LocationRadius" class="form-control" />
                <span asp-validation-for="LocationRadius" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationPriority" class="control-label">Priority</label>
                <input asp-for="LocationPriority" class="form-control" />
                <span asp-validation-for="LocationPriority" class="text-danger"></span>
            </div>
            <div class="form-group btnpadding">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
